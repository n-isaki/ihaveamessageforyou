rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper: Check if authenticated admin
    function isAdmin() {
      return request.auth != null;
    }
    
    // Helper: Check if file has valid token in metadata
    function hasValidToken() {
      return resource.metadata.token != null 
             && request.query.token == resource.metadata.token;
    }
    
    // Album images: allow upload with size/type limit (admin or customer with setup link)
    // Max 5MB, only image/jpeg, image/png, image/webp
    match /gift-images/{giftId}/{fileName} {
      allow read: if true;
      allow create: if request.resource.size <= 5 * 1024 * 1024
                    && request.resource.contentType.matches('image/(jpeg|png|webp)');
      allow update, delete: if isAdmin();
    }
    
    match /{allPaths=**} {
      // READ: Admin or with valid token
      allow read: if isAdmin() || hasValidToken();
      
      // WRITE/DELETE: Only Admin
      allow write: if isAdmin();
      allow delete: if isAdmin();
    }
  }
}
